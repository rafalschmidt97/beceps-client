@inject IJSRuntime JSRuntime;

@if (!string.IsNullOrEmpty(Icon))
{
    <div class="sidebar w-100">
        <div class="top-row pl-4 navbar navbar-dark d-flex align-content-center">
            <a class="navbar-brand" href="">@Title</a>
            <button class="navbar-toggler back-btn" @onclick="GoBack">
                @IconText
                <i class=@($"fas {Icon} text-light") />
            </button>
        </div>
    </div>
}
else
{
    <div class="sidebar w-100">
        <div class="top-row pl-4 navbar navbar-dark d-flex align-content-center">
            <a class="navbar-brand" style="font-size:1.3rem;">@Title</a>
            <button class="navbar-toggler back-btn position-fixed" @onclick="GoBack">
                <i class="fas fa-arrow-left text-light" />
            </button>
        </div>
    </div>
}


@code {
    [Parameter]
    public string Title { get; set; }
    [Parameter]
    public string IconText { get; set; }
    [Parameter]
    public string Icon { get; set; }

    public async Task GoBack()
    {
        await JSRuntime.InvokeAsync<object>("test.historyGo", -1);
    }
}


